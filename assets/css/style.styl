negro = #161616
amarillo = #EDC006
blanco = #FFFFFF

*
    margin: 0;
    padding: 0;
    box-sizing: border-box;

body,html
    width 100%
    height: 100%
    background-color: negro
    color: blanco

header
    position: absolute
    width: 100%;
    height: 100%;
    z-index: 999;

p,h1,h2,h3,h4,h5,h6
    font-family: 'Roboto', sans-serif;

nav
    position: fixed !important
    transform: rotate(-90deg) translateX(-65%) translateY(-400%);
    &.bg-body-tertiary
        background-color: transparent !important;
    .navbar-nav
        align-items: center;
        justify-content: space-around;
    li
        width: 12vh;
        height: 4vh;
        border-radius: 50%;
        margin: 8px;
        text-align: center;
        padding: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        position relative
        &.active
            background: linear-gradient(90deg, rgba(237,192,6,1) 0%, rgba(255,255,255,1) 100%);
            a
                background-color: negro
        &:hover
            background: linear-gradient(-90deg, rgba(237,192,6,1) 0%, rgba(255,255,255,1) 100%);
            border-radius: 50%;
            a
                background-color: negro
        a
            position: absolute
            background-color: transparent
            width 97%
            height: 95%
            display: flex !important
            border-radius: 50%
            color: blanco !important
            justify-content:center
            align-items: center
            font-family: 'Bebas Neue', cursive;
            font-size: 0.8vw !important;
.header-auxiliar, .contacto
    position absolute

.header-auxiliar
    top: 80px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    margin-right: auto;
    margin-left: auto;
    img
        height: 40px
    .logo-paternitas
        position: absolute;
        left: 15%;
    .botones
        display: flex;
        justify-content: flex-end;
        top: 0;
        right: 160px;
        position: absolute;
.contacto
    bottom: 80px
    right: 10%
    width: max-content
    position: fixed
    .col-xl-12
        display: flex
        >a
            //border: 1px solid #fff;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 20px;
            background: linear-gradient(90deg, rgba(237,192,6,1) 0%, rgba(255,255,255,1) 100%);
            span
                width: 97%;
                height: 95%;
                display: block;
                border-radius: 50%;
                line-height: 2;
                padding: 6px 25px;
                background-color: #161616;
                font-size: 16px
    .info-contacto
        display: flex
        flex-direction: column
        justify-content: end
    a
        font-family: 'Bebas Neue', cursive;
        color: blanco
        text-align: right
        text-decoration: none
    .rrss
        position: fixed;
        right: 50px;
        display: flex;
        justify-content: end;
        align-items: center;
        transform: translateY(-5px);
        top: 80px;
        a
            padding: 10px
    

.botones
    display: flex;
    justify-content: flex-end;
    top: 50px
        
section
    min-height: 500px
    padding: 150px 0
    &#inicio 
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url("../img/bg-gif.gif")
        background-position: center
        background-size: cover
        background-repeat: no-repeat
        .row
            justify-content: center
        img
            width 100%
            object-fit: contain
            &:first-child
                content: url("../img/logo-g4g.png")
                animation: ondas 5s linear infinite
                animation-delay: 2s
    .titulo
        margin-bottom: 100px
    


#iniciativa, #profes, #donaciones
    background-image: url("../img/bg.jpg")
    background-size: cover
    background-repeat: repeat
    background-position: top

#iniciativa
    padding: 0
    .row
        padding: 150px 0
    h2
        color: amarillo
    .col-xl-6
        &:last-child
            margin-top: 100px;
#donaciones
    padding: 300px 0
    background-image: url("../img/bg-donaciones.jpg") !important

.btn-amarillo
    background-color: amarillo
    width max-content
    padding: 10px 30px
    border-radius: 50px
    display: block
    text-decoration: none
    color: negro
    font-family: 'Bebas Neue', cursive;
.flex-0
    flex: 0 !important

#profes
    padding: 150px 0
    .col-xl-6:first-child
         min-height: 600px
    .col-xl-6:last-child
        position: absolute
        right: 0

.swiper
    padding-bottom: 80px
.swiper-wrapper
    max-height: 600px
    height: 600px
    .swiper-slide
        height: 100%
        img
            width 100%
            height: 100%
            object-fit: cover

.swiper-button-next, .swiper-button-prev
    bottom: 10px;
    top: inherit;
    -webkit-text-stroke: 5px
    &:after
        color: amarillo
.swiper-button-next
    right: 40px !important
.swiper-button-prev
    left: 40px !important

.swiper-button-disabled:after
    color: transparent

figure
    &.col
        perspective: 1000px;
        min-height: 200px;
        .contenedor
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.8s;
            transform-style: preserve-3d;
            .front
                width 100%
                height: 100%
                img
                    display: block
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                figcaption
                    position: absolute
                    top: 50%
                    transform: translateY(-50%)
                    width: 100%;
                    padding: 10px
                    h3
                        font-size: 18px;
            .back
                background-image: url("../img/back.jpg")
                background-size: cover
                background-color: negro
                width 100%
                height 100%
                transform: rotateY(180deg);
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 10px
                p
                    color: blanco
                    font-size: 12px
            .front,.back
                position: absolute;
                width: 100%;
                height: 100%;
                -webkit-backface-visibility: hidden; /* Safari */
                backface-visibility: hidden;
        &:hover
            .contenedor
                transform: rotateY(180deg);
        
